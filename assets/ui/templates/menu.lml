<window oneColumn="true" defaultPad="2" defaultFillX="true"
	tablePadBottom="8" tablePadTop="200">
	<image style="logo_{currentLocale}" color="t-highlight" toTitleTable="true" grow="true" />
	<textButton onChange="startGame">@play</textButton>
	<textButton onChange="show:settings">@settings</textButton>
	<textButton onChange="show:controls">@controls</textButton>
	<textButton onChange="app:exit" width="256">@exit</textButton>
</window>
